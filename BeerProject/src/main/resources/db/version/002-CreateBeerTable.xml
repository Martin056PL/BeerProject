<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2" author="Kamil Wawer">
        <createTable tableName="BEER">
            <column name="beer_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="brewery_id" type="bigint"/>
            <column name="name" type="varchar(255)"/>
            <column name="style" type="varchar(255)"/>
            <column name="extract" type="double"/>
            <column name="alcohol" type="double"/>
            <column name="beer_image" type="MEDIUMBLOB"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="Kamil Wawer">
        <createIndex indexName="index4brewery" tableName="BEER">
            <column name="brewery_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="4" author="Kamil Wawer">
        <addForeignKeyConstraint constraintName="fk_brewery2beer"
                                 baseTableName="BEER"
                                 baseColumnNames="brewery_id"
                                 referencedTableName="BREWERY"
                                 referencedColumnNames="brewery_id"/>
    </changeSet>

</databaseChangeLog>