pipeline {
    agent any

    tools {
        maven "M3"
    }

    stages {
        stage('Compiling') {
            steps {
                dir('BeerProject') {
                    echo 'Compiling..'
                    sh 'mvn clean compile'
                }

            }
        }

//         stage('Test') {
//             steps {
//                 dir('BeerProject') {
//                     echo 'Testing..'
//                     sh 'mvn test'
//                 }
//             }
//         }

        stage('Sonarqube analyze') {
            steps {
                dir('BeerProject') {
                    withCredentials([
                        file(credentialsId: 'maven-settings', variable: 'MAVEN_SETTINGS')
                    ])
                        echo 'run analyze..'
                        withSonarQubeEnv('SonarQube'){
                            sh 'mvn -s $MAVEN_SETTINGS sonar:sonar '
                        }
                    }
                }
            }
        }

        stage("Quality gate") {
            steps {
                waitForQualityGate abortPipeline: true
            }
        }

        stage('Packaging') {
            steps {
                dir('BeerProject') {
                    echo 'Packaging....'
                    sh 'mvn package'
                }
            }
        }
    }
}