pipeline {
    agent any

    tools {
        maven "M3"
    }

    stages {
        stage('Compiling') {
            steps {
                dir('BeerProject') {
                    echo 'Compiling..'
                    sh 'mvn clean compile'
                }

            }
        }

        stage('Test') {
            steps {
                dir('BeerProject') {
                    echo 'Testing..'
                    sh 'mvn test'
                }
            }
        }

        stage('Sonarqube analyze') {
            step{
                dir('BeerProject') {
                    echo 'run analyze..'
                    sh 'clean install sonar:sonar -Dsonar.login=admin -Dsonar.password=user -Dsonar.host.url=http://localhost:8080'
                }
            }
        }

        stage('Packaging') {
            steps {
                dir('BeerProject') {
                    echo 'Packaging....'
                    sh 'mvn package'
                }
            }
        }
    }
}