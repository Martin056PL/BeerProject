pipeline {
    agent any

    tools{
        maven "M3"
    }


    stages {
        stage('asd') {
            steps {
               sh "pwd"
                   dir('BeerProject') {
                     sh "pwd"
                   }
                   sh "pwd"
            }
        }

        stage('Build') {
            steps {
                dir('BeerProject') {
                  sh "pwd"
                }
                echo 'Compiling..'
                sh 'mvn clean compile'
            }
        }
        stage('Test') {
            steps {
                dir('BeerProject') {
                    sh "pwd"
                }
                echo 'Testing..'
                sh 'mvn test'
            }
        }
        stage('Packaging') {
            steps {
                echo 'Packaging....'
                  sh 'mvn package'
            }
        }
    }
}