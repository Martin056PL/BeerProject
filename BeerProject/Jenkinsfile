pipeline {
    agent any

    tools {
        maven "M3"
    }

    stages {
        stage('Compiling') {
            steps {
                dir('BeerProject') {
                    echo 'Compiling..'
                    sh 'mvn clean compile'
                }

            }
        }

        stage('Test') {
            steps {
                dir('BeerProject') {
                    echo 'Testing..'
                    sh 'mvn test'
                }
            }
        }

        stage('Packaging') {
            steps {
                dir('BeerProject') {
                    echo 'Packaging....'
                    sh 'mvn package'
                }
            }
        }
    }
}