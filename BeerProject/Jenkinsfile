pipeline {
    agent any

    tools{
        maven "M3"
    }


    stages {
        stage('asd') {
            steps {
                echo 'enter to project folder'
                sh 'cd BeerProject'
                sh 'pwd'
            }
        }

        stage('Build') {
            steps {
                echo 'Compiling..'
                sh 'mvn clean compile'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                 sh 'mvn test'
            }
        }
        stage('Packaging') {
            steps {
                echo 'Packaging....'
                  sh 'mvn package'
            }
        }
    }
}