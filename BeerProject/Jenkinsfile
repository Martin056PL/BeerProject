pipeline {
    agent any

    tools{
        maven "M3"
    }


    stages {
    dir('BeerProject') {
       stage('Build') {
            steps {

                 echo 'Compiling..'
                 sh 'mvn clean compile'


            }
        }
        stage('Test') {
            steps {

                    sh "pwd"
                    echo 'Testing..'
                    sh 'mvn test'

            }
        }
        stage('Packaging') {
            steps {

                    echo 'Packaging....'
                    sh 'mvn package'

            }
        }
       }
    }
}